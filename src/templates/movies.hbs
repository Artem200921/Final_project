{{#each this}}
<li class="movies-item">
  <div class="movies-poster">
    <img class="movies-image" src="https://image.tmdb.org/t/p/w500/{{poster_path}}" alt="{{title}}"
      data-id="{{id}}" />
  </div>

  <div class="description">
    <h2 class="description-title">{{title}}</h2>
    <p class="description-info">
      {{#each genre_ids}} {{name}} {{/each}}| {{release_date}}
    </p>
  </div>
</li>
{{/each}}